extends layouts/main-layout.pug

block styles
        link(rel="stylesheet", href="/css/product.css")

block content
        main
            if prods.length > 0
                div.grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://analyticsindiamag.com/wp-content/uploads/2019/09/8314929977_36b1d58cf6_o.jpg", alt="A book")
                            div.card__content
                                h2.product__price Rs.500
                                p.product__description A very interesting book about so many even more interesting things!
                            div.card__actions
                                button.btn Add to Cart
            else
                h1 No Products